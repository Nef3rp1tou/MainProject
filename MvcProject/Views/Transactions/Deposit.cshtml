@{
    ViewData["Title"] = "Deposit";
}

<h2>Deposit</h2>

<div class="row">
    <div class="col-md-6 offset-md-3">
        <form id="deposit-form">
            <div class="form-group">
                <label for="amount">Enter Deposit Amount</label>
                <input type="number" id="amount" class="form-control" name="amount" placeholder="Enter amount" required min="0.01" step="0.01">
            </div>
            <button type="submit" class="btn btn-primary mt-3">Submit Deposit</button>
        </form>

        <div id="response-message" class="mt-3"></div> <!-- For displaying messages -->
    </div>
</div>

@section Scripts {
    <script src="~/js/deposit.js" asp-append-version="true"></script>
}
