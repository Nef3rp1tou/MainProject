@{
    Layout = null; // Disable the default layout
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Payment Page</title>
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500;700&display=swap" rel="stylesheet">
    <!-- Add jQuery -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <style>
        body {
            font-family: 'Roboto', sans-serif;
            background-color: #f8f9fa;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            margin: 0;
            color: #495057;
        }

        .container {
            background: #ffffff;
            padding: 40px 50px;
            border-radius: 12px;
            box-shadow: 0 10px 20px rgba(0, 0, 0, 0.1);
            max-width: 450px;
            text-align: center;
        }

            .container h1 {
                font-size: 28px;
                color: #007bff;
                margin-bottom: 20px;
            }

            .container p {
                font-size: 18px;
                margin-bottom: 25px;
            }

        .btn {
            display: inline-block;
            background-color: #007bff;
            color: #ffffff;
            padding: 14px 30px;
            border-radius: 6px;
            font-size: 18px;
            font-weight: 500;
            text-decoration: none;
            cursor: pointer;
            border: none;
        }

            .btn:hover {
                background-color: #0056b3;
            }

            .btn:disabled {
                background-color: #cccccc;
                cursor: not-allowed;
            }
    </style>
</head>
<body>
    <div class="container">
        <h1>Complete Your Payment</h1>
        <p>Transaction ID: <strong>@ViewData["TransactionId"]</strong></p>
        <p>Amount: <strong>@ViewData["Amount"]</strong> cents</p>
        <button id="confirm-payment"
                class="btn"
                data-transaction-id="@ViewData["TransactionId"]"
                data-amount="@ViewData["Amount"]">
            Confirm Payment
        </button>

    </div>

    <!-- Scripts at the end of body -->
    <script src="~/js/dummy.js" asp-append-version="true"></script>
</body>
</html>